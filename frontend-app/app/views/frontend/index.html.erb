<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Frontend - URL Shortener</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    form {
      margin-top: 50px;
    }
    input[type="text"] {
      padding: 10px;
      margin: 10px;
      width: 80%;
    }
    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
    }
    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <h1>URL Shortener</h1>
  <form id="shortenForm">
    <input type="text" id="longUrl" placeholder="Enter URL to shorten" required>
    <button type="submit">Shorten</button>
  </form>
  <p id="shortUrl"></p>

  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    const form = document.getElementById('shortenForm');
    const longUrlInput = document.getElementById('longUrl');
    const shortUrlOutput = document.getElementById('shortUrl');

    form.addEventListener('submit', async (event) => {
      event.preventDefault();
      const longUrl = longUrlInput.value;

      try {
        const response = await axios.post('http://localhost:3000/shorten', {
          url: { original_url: longUrl },
          headers: { Authorization: 'Bearer ABHI' } // Assuming the API token is used here
        });

        if (response.data.short_url) {
          shortUrlOutput.innerHTML = `Short URL: <a href="${response.data.short_url}" target="_blank">${response.data.short_url}</a>`;
        } else {
          shortUrlOutput.innerHTML = 'Failed to shorten URL';
        }
      } catch (error) {
        console.error('Error:', error);
        shortUrlOutput.innerHTML = 'Error shortening the URL';
      }
    });
  </script>
</body>
</html>
